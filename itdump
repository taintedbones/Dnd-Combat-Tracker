PRAGMA foreign_keys=ON;
BEGIN TRANSACTION;
CREATE TABLE actors
(
actorID INTEGER PRIMARY KEY AUTOINCREMENT,
name text,
health int,
armorClass int,
spellSaveDC int,
notes text,
type text
);

